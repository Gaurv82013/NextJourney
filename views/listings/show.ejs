<% layout('/layouts/boilerplate') -%>
<div class="show-page-fullwidth">
    <button class="btn btn-outline-dark" onclick="window.history.back()"><i class="fa-solid fa-arrow-left"></i> Go Back</button>
    <div class="row mt-3 g-2">
        <div class="col-12 col-md-8 col-lg-6 mx-auto px-0">
            <h2><%= showListing.title %></h2>
            <div class="card mb-3">
            
                <img src="<%= showListing.image.url %>" alt="<%= showListing.title %>" class="card-img-top show-img">
                
                <div class="card-body">
                    <p class="body-text"><i>Owner: <%= showListing.owner && showListing.owner.username ? showListing.owner.username : 'Unknown' %></i></p>
                    <p class="body-text"><%= showListing.description %></p>
                    <p class="body-text"> &#8377; <%= showListing.price.toLocaleString("en-IN") %> </p>
                    <p class="body-text"><%= showListing.location %> </p>
                    <p class="body-text"><%= showListing.country %> </p>
                    <% if (showListing.category && showListing.category.length > 0) { %>
                        <p class="body-text"><strong>Categories:</strong> 
                            <% showListing.category.forEach((cat, index) => { %>
                                <span class="badge bg-secondary me-1"><%= cat %></span>
                            <% }); %>
                        </p>
                    <% } %>

            </div>
            </div>
            <% if (currentUser && showListing.owner && showListing.owner._id && showListing.owner._id.equals(currentUser._id)) { %>
            <div class="Btns">
                <a class="btn-action" href="/listings/<%=showListing.id%>/edit"><i class="fa-solid fa-pen"></i> Edit</a>
                <form method="post" action="/listings/<%=showListing.id%>?_method=DELETE" style="display:inline">
                        <button class="btn-danger-light" type="submit"><i class="fa-solid fa-trash"></i> Delete</button>
                </form>
            </div>
           <% } %>
            <hr>
        </div>
        
    </div> 
    
    
    <div class="col-12 col-md-8 col-lg-6 mx-auto px-0">
        <%if(currentUser){ %>
        <h3>Add a Review</h3>
        <form action="/listings/<%= showListing.id %>/reviews" class="mt-3 mb-3 needs-validation" method="post" novalidate>
            <div>
                
                <fieldset class="starability-slot">
                <legend>Rating:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>

            </div>
            <br>

            <div>
                <label for="comment">Comment:</label>
                <textarea id="comment" name="review[comment]" rows="4" cols="50" class="form-control" placeholder="Share your experience here" required></textarea>
            </div>
            <br>

            <button class="btn btn-outline-dark">Submit</button><br>
        </form>
        <% } %>

         
        <h4>All Reviews</h4>
        <% if(showListing.reviews.length===0){ %>
            <p>No reviews yet!</p>
        <% } else { %>
            <div class="row">
                <% for (let review of showListing.reviews) { %>
                    <div class="reviewCard col-12 col-sm-5 mb-3 ms-sm-3">
                        <div class="card-body">
                            <h6 class="card-title" style="font-size: large;"><%= review.author.username %></h6>
                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                            <p class="card-text"><%= review.comment %></p>
                        </div>
                       
                        <% if(currentUser && review.author._id.equals(currentUser._id)) { %>
                        <form action="/listings/<%= showListing.id %>/reviews/<%= review.id %>?_method=DELETE" method="POST">
                            <button class="btn btn-dark btn-sm mt-2">Delete</button>
                        </form>
                        <% } %>
                       
                    </div>
                <% } %>
            </div>
        <% } %>
        <div class="Map">
            <h4>Where you'll be <i class="fa-solid fa-arrow-right"></i></h4><br>
            <a href="https://www.google.com/maps/search/<%= encodeURIComponent(showListing.title + ', ' + showListing.location + ', ' + showListing.country) %>" target="_blank" class="btn btn-outline-success">
                <i class="fa-solid fa-map-location-dot"></i> View on Google Maps
            </a>
        </div>

    </div>
    
</div>

